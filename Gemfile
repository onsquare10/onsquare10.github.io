source "https://rubygems.org"

# Jekyll 최신 버전으로 업데이트 (테마가 Jekyll 4.x를 지원하는지 확인하세요)
gem "jekyll", "~> 4.3"

# Jekyll 플러그인들 (이 목록은 _config.yml의 plugins 배열과 일치해야 합니다)
gem "jekyll-sitemap"
gem "jekyll-gist"
gem "jekyll-mentions"
gem "jekyll-feed"
# 사용하시는 테마 gem 또는 다른 필요 플러그인이 있다면 여기에 추가

# Ruby 3.0+ 에서 jekyll serve 실행 위해 필수
gem "webrick"

# Ruby 3.x logger 경고 제거용
gem "logger"

# Windows 파일 감지 성능 향상용
gem "wdm", ">= 0.1.0", :platforms => [:mingw, :mswin, :x64_mingw]
# 또는 아래와 같이 작성 가능
# gem 'wdm', '>= 0.1.0' if Gem.win_platform?

# (선택사항) 플러그인 그룹화
# group :jekyll_plugins do
#   gem "jekyll-sitemap"
#   gem "jekyll-gist"
#   gem "jekyll-mentions"
#   gem "jekyll-feed"
# end